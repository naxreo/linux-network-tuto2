FROM nginx:alpine

# 로컬에 다운로드된 cytoscape.min.js 파일 사용
# 빌드 전에 download-dependencies.sh를 실행하여 js/cytoscape.min.js 파일을 준비해야 합니다
COPY js/cytoscape.min.js /usr/share/nginx/html/js/cytoscape.min.js

# HTML 파일들 복사
COPY *.html /usr/share/nginx/html/

# favicon 복사
COPY favicon.svg /usr/share/nginx/html/

# nginx 설정 파일 복사 (다수 요청 처리 최적화)
COPY nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]

